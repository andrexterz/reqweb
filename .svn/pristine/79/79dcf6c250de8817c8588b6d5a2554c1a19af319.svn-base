package br.ufg.reqweb.dao;

import br.ufg.reqweb.model.Curso;
import java.util.ArrayList;
import java.util.List;
import org.hibernate.HibernateException;
import org.hibernate.SessionFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;
import org.springframework.transaction.annotation.Transactional;

/**
 *
 * @author andre
 */
@Repository
public class CursoDao {

    @Autowired
    private SessionFactory sessionFactory;

    @Transactional
    public void adicionar(Curso curso) {
        this.sessionFactory.getCurrentSession().save(curso);

    }

    @Transactional
    public void atualizar(Curso curso) {
        this.sessionFactory.getCurrentSession().update(curso);
    }

    @Transactional
    public void excluir(Curso curso) {
        this.sessionFactory.getCurrentSession().delete(curso);
    }

    @Transactional(readOnly = true)
    public List listar() {
        try {
            List cursoList = this.sessionFactory.getCurrentSession().createQuery("FROM Curso").list();
            return cursoList;
        } catch (Exception ex) {
            return new ArrayList<Curso>();
        }

    }

    @Transactional(readOnly = true)
    public Curso buscar(String id) {
        Curso curso;
        try {
            curso = (Curso) this.sessionFactory.getCurrentSession().get(Curso.class, id);
        } catch (Exception e) {
            curso = null;
        }
        return curso;
    }

}
