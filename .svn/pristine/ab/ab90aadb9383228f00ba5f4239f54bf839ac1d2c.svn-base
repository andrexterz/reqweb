<ui:composition template="administrador.xhtml"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:h="http://xmlns.jcp.org/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                xmlns:f="http://xmlns.jcp.org/jsf/core"
                xmlns:ui="http://xmlns.jcp.org/jsf/facelets">
    <ui:define name="componentTitle">#{msg.cursos}</ui:define>
    <ui:define name="content">
        <h:form class="contentTables" id="cursoForm">
            <h:panelGroup layout="block" id="cursoToobar"
                          styleClass="cursoToobar">
                <p:commandButton value="#{msg.novo}"
                                 update=":content"
                                 ajax="false"
                                 action="#{cursoBean.novoCurso}" />

                <p:commandButton value="#{msg.editar}"
                                 action="#{cursoBean.editaCurso}" />

                <p:commandButton value="#{msg.excluir}"  />
            </h:panelGroup>

            <p:dataTable id="tableCursos" var="cursoItem"
                         value="#{cursoBean.cursos}"
                         rowKey="#{cursoItem.id}"
                         paginator="true"
                         selectionMode="single"
                         selection="#{cursoBean.curso}"
                         paginatorPosition="bottom"
                         rows="10" pageLinks="5">
                <p:ajax event="rowSelect" process="@this" />
                <p:column headerText="#{msg.curso}" styleClass="cursoColNome">
                    <h:outputText value="#{cursoItem.nome}" />
                </p:column>
                <p:column headerText="#{msg.cursoMatriz}" styleClass="cursoColMatriz">
                    <h:outputText value="#{cursoItem.matriz}" />
                </p:column>    
                <p:column headerText="#{msg.cursoSigla}" styleClass="cursoColSigla">
                    <h:outputText value="#{cursoItem.sigla}" />
                </p:column>
            </p:dataTable>
        </h:form>
    </ui:define>
</ui:composition>
