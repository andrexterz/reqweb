<ui:composition template="administrador.xhtml"
                xmlns="http://www.w3.org/1999/xhtml"
                xmlns:h="http://xmlns.jcp.org/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                xmlns:f="http://xmlns.jcp.org/jsf/core"
                xmlns:ui="http://xmlns.jcp.org/jsf/facelets">
    <ui:define name="componentTitle">#{msg.cursos}</ui:define>
    <ui:define name="content">
        <h:form id="cursoForm" styleClass="formBody">
            <div class="formTitle">#{msg.cursoNovo}</div>
            <p:panelGrid id="cursoPanel" styleClass="formGrid">
                <p:row>
                    <p:column>
                        <h:outputLabel for="#{cursoBean.curso.matriz}" value="#{msg.cursoMatriz}" />
                    </p:column>
                    <p:column>
                        <h:outputLabel for="#{cursoBean.curso.sigla}" value="#{msg.cursoSigla}" />
                    </p:column>
                </p:row>
                <p:row>
                    <p:column>
                        <h:inputHidden value="#{cursoBean.curso.id}" id="cursoId" />
                        <h:inputText value="#{cursoBean.curso.matriz}" id="cursoMatriz" onkeyup="toUpper(this)" />
                    </p:column>
                    <p:column>
                        <h:inputText value="#{cursoBean.curso.sigla}" id="cursoSigla" onkeyup="toUpper(this)" />
                    </p:column>
                </p:row>
                <p:row>
                    <p:column colspan="2">
                        <h:outputLabel for="#{cursoBean.curso.nome}" value="#{msg.curso}" />
                    </p:column>
                </p:row>
                <p:row>
                    <p:column colspan="2">
                        <h:inputText value="#{cursoBean.curso.nome}" id="cursoNome" onkeyup="toUpper(this)" />
                    </p:column>
                </p:row>
            </p:panelGrid>
            <h:panelGroup layout="block" styleClass="alignCenter formFooterButtons">
                <p:commandButton value="#{msg.salvar}" action="#{cursoBean.salvaCurso}" ajax="false" update=":formHeader:systemMessages :content" />
                <p:commandButton value="#{msg.cancelar}" action="#{cursoBean.listaCursos()}" ajax="false" />
            </h:panelGroup>
        </h:form>
    </ui:define>
</ui:composition>

