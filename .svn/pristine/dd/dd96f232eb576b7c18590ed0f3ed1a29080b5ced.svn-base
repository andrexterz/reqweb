<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="pt-br"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:p="http://primefaces.org/ui"
      xmlns:c="http://xmlns.jcp.org/jsp/jstl/core">
    <f:view locale="#{localeBean.locale}">
        <h:head>
            <title><ui:insert name="title">
                    <h:outputText value="Home - #{usuarioBean.perfil.papel}" rendered="#{usuarioBean.autenticado}" />
                    <h:outputText value="Home" rendered="#{!usuarioBean.autenticado}" />
                </ui:insert></title>
            <link type="text/css" rel="stylesheet"
                  href="#{resource['css/default.css']}" />
            <h:outputScript library="js" name="locale_pt.js" />
            <h:outputScript library="js" name="reqweb.js" />
        </h:head>
        <h:body>
            <p:layout fullPage="true" styleClass="container">
                <p:layoutUnit position="north" size="72" styleClass="headerContainer">
                    <p:panelGrid columns="2" columnClasses="headerColA,headerColB"
                                 styleClass="header" id="mainHeader">
                        <p:column>
                            <h:outputText value="ReqWeb" />
                            <h:form id="formLocale" styleClass="widgetLocale">
                                <h:selectOneMenu valueChangeListener="#{localeBean.changeLocale}" onchange="this.form.submit()" value="#{localeBean.locale}">
                                    <f:selectItems value="#{localeBean.localeList}" />
                                </h:selectOneMenu>
                            </h:form>
                        </p:column>
                        <p:column>
                            <h:form class="headerForm" id="formHeader">
                                <p:panelGrid columns="3" styleClass="headerCommand"
                                             columnClasses="headerCommandA,headerCommandB,headerCommandC">
                                    <p:column>
                                        <p:commandLink action="#{usuarioBean.home}"
                                                       styleClass="alignLeft"
                                                       rendered="#{usuarioBean.autenticado}"
                                                       ajax="false">
                                            <h:graphicImage value="#{resource['img/home.png']}" />
                                        </p:commandLink>
                                    </p:column>
                                    <p:column>
                                        <h:outputText
                                            value="#{usuarioBean.usuario} - #{usuarioBean.perfil.papel}"
                                            rendered="#{usuarioBean.autenticado}" />
                                    </p:column>
                                    <p:column>
                                        <p:commandLink action="#{usuarioBean.authLogout()}"
                                                       rendered="#{usuarioBean.autenticado}" ajax="false">
                                            <p:graphicImage value="#{resource['img/logout.png']}" />
                                        </p:commandLink>
                                    </p:column>
                                </p:panelGrid>

                                <p:growl id="systemMessages" showDetail="true" life="2500" globalOnly="true" widgetVar="sysMsg" />

                            </h:form>
                        </p:column>
                    </p:panelGrid>

                </p:layoutUnit>
                <p:layoutUnit position="west" size="224" styleClass="menuContainer">
                    <h:panelGroup layout="block" styleClass="menuTop">
                        <ui:insert name="menuTitle">
                            Menu
                        </ui:insert>
                    </h:panelGroup>
                    <ui:insert name="menu"></ui:insert>
                </p:layoutUnit>
                <p:layoutUnit position="center" size="600"
                              styleClass="squareBorders contentContainer">
                    <h:panelGroup layout="block" styleClass="menuTop">
                        <ui:insert name="componentTitle">
                            <c:choose>
                                <c:when test="#{usuarioBean.autenticado}">
                                    Home
                                </c:when>
                                <c:otherwise>
                                    &nbsp;
                                </c:otherwise>
                            </c:choose>

                        </ui:insert>
                    </h:panelGroup>
                    <h:panelGroup layout="block" id="content">
                        <ui:insert name="content">content layer</ui:insert>
                    </h:panelGroup>
                </p:layoutUnit>
                <p:layoutUnit position="south" size="32"
                              styleClass="squareBorders footer">
                    <h:panelGroup>
                        <h:outputText
                            value="ReqWeb &copy; 2013 - Instituto de InformÃ¡tica | UFG - #{localeBean.locale}" />
                    </h:panelGroup>
                </p:layoutUnit>
            </p:layout>
        </h:body>
    </f:view>
</html>

