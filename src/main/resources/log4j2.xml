<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="reqwebLog" status="error" packages="org.apache.logging.log4j.core.lookup">
    <Appenders>
        <File name="REQWEBLOG" fileName="${web:rootDir}/reqweb.log" append="true">
            <PatternLayout pattern="%t %-5p %c{2} - %m%n"/>
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="warn">
            <AppenderRef ref="REQWEBLOG"/>
        </Root>
    </Loggers>
</Configuration>